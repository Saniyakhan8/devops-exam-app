pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
               git branch: 'main', url: 'https://github.com/Saniyakhan8/devops-exam-app.git'
            }
        }
stage('Build Docker Image') {
    steps {
        sh 'docker build -t devops-exam-app .'
    }
}


        stage('Run Container') {
            steps {
                sh 'docker run -d -p 3000:3000 saniyakhan8/devops-exam-app:latest'
            }
        }
    }
}
